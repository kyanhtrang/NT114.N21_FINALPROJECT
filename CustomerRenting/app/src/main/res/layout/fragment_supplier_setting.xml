<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SupplierFragments.SupplierSettingFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        app:cardCornerRadius="75dp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/avatar" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:text="Trang Kỳ Anh"
        android:textSize="@dimen/_24ssp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:orientation="vertical"
        android:background="@drawable/green_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <TextView
            android:id="@+id/accountSettings"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingStart="25dp"
            android:paddingEnd="10dp"
            android:text="Thông tin tài khoản"
            android:textColor="@color/brown"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tranfer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_lock_change"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingStart="25dp"
            android:paddingEnd="10dp"
            android:text="Chuyển về giao diện chính"
            android:textColor="@color/brown"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cancel_store"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_cancel"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingStart="25dp"
            android:paddingEnd="10dp"
            android:text="Hủy đăng ký cửa hàng"
            android:textColor="@color/brown"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="12dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="10dp"
        android:text="Thoát"
        android:textColor="@color/brown"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>
